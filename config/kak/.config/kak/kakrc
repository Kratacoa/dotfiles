# First load the plugin manager and then the other plugins
source "%val{config}/plugins/plug.kak/rc/plug.kak"
plug "andreyorst/plug.kak" noload

## Enables auto-pairing of characters
plug "alexherbo2/auto-pairs.kak"

## fzf integration
plug "andreyorst/fzf.kak"

## lsp integration
plug "kak-lsp/kak-lsp" do %{
    cargo install --locked --force --path .
} 

plug "catppuccin/kakoune"

# In the end load the remaining configuration files
source "%val{config}/options-and-highlighters.kak"
source "%val{config}/commands.kak"
source "%val{config}/mappings.kak"
source "%val{config}/hooks.kak"
